    "web:build": "npm run build --workspace=web",
    "web:preview": "npm run preview --workspace=web",
    "install:all": "npm install",
    "clean": "rimraf node_modules backend/node_modules web/node_modules shared/node_modules backend/dist web/dist"
  },
  "keywords": [
